
  <div class="form-activities">
    <h1 class="text-center fs-1" id="h1-color">Add your activity</h1>
    <%= simple_form_for [@trip, @activity] do |f| %>

      <%= f.input :name %>
      <%= f.input :booking_ref %>
      <%= f.input :date, as: :date, html5: true %>
      <%= f.input :start_time, as: :time, html5: true %>
      <%= f.input :end_time, as: :time, html5: true %>
      <%= f.input :notes %>
  <div>
  <div class="input-container">
        <%= f.input :photo, as: :file, label: "Upload", class: "input-load"%>
          <i class="fa-solid fa-upload"></i>
  </div>      <div class="py-5">
        <%= f.submit "Save", class: "save" %>
      </div>
    <% end %>

    <%= link_to trip_path(@trip), class: "d-flex justify-content-end text-decoration-none mb-5 pb-5" do %>
      <i class="fa-regular fa-circle-left fs-1" id="back_button"></i></i>
    <% end %>

  </div>
