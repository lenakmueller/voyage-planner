<div class="flip-card">
  <div class="card-wrapper">

    <div class="front-side">
      <div class="comp-card-info-act">
        <i class="fa-solid fa-child-reaching card-icon"></i>
        <strong><p> <%= comp.name.upcase %> </p></strong>
        <p><strong> <%= comp.date.strftime("%B %e, %Y")  %></strong></p>
        <p><span><strong> <%= comp.start_time.strftime("%l:%M %p")  %> </span> - <span> <%= comp.end_time.strftime("%l:%M %p")  %></strong> </span></p>
        <p>üìç <%= comp.location  %> </p>
      </div>
    </div>

    <div class="back-side">
      <div class="comp-card-info-act">
        <div class="d-flex" style="height:160px;">
          <div class="flex-grow-1 text-start">
            <p><strong>Booking No.</strong> <%= comp.booking_ref  %></p>
            <p><strong>Notes</strong> <%= comp.notes %></p>
          </div>
          <div class="d-flex flex-column justify-content-between">
            <%= link_to edit_trip_activity_path(comp.trip,comp) do %>
              <i class="fa-solid fa-pen"></i>
            <% end %>
            <% if comp.photo.attached?  %>
              <div type="button" class="pdf_button pt-3" data-bs-toggle="modal" data-bs-target="#pdfModal-<%= comp.id %>" >
                <i class="fa-solid fa-file"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
