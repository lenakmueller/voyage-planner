<%= simple_form_for @trip do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div>
      <div>
        <%= f.input :title, label: 'Trip Name' %>
        <%= f.input :location, label: 'Destination' %>
        <div class="col-4">
          <%= f.input :departure, as: :date, html5: true, label: 'Start Date' %>
        </div>
        <div class="col-4">
          <%= f.input :return_day, as: :date, html5: true, label: 'End Date' %>
        </div>
        <%= f.input :notes, :as => :text %>
        <%= f.input :photo, as: :file %>
      </div>
      <%= f.submit 'SAVE', class: "btn" %>
    </div>
  <% end %>
