<div class="flip-card">
  <div class="card-wrapper">
    <div class="comp-card-info-tra front-side">
      <%= render "trips/icon_comp_card_tra", transportation: comp %>
      <p><span><strong> <%= comp.departure.strftime("%B %e")  %> </span> - <span> <%= comp.return_day.strftime("%B %e, %Y")  %></strong> </span></p>
      <p>üìç <%= comp.location  %> </p>
    </div>
    <div class="back-side">
      <div class="comp-card-info-tra">
        <div class="d-flex" style="height:160px;">
          <div class="flex-grow-1 text-start">
            <p><strong>Booking No.</strong> <%= comp.booking_ref  %></p>
            <p><strong>Notes</strong> <%= comp.notes %></p>
          </div>
          <div class="d-flex flex-column justify-content-between">
            <%= link_to edit_trip_transportation_path(comp.trip,comp) do %>
              <i class="fa-solid fa-pen"></i>
            <% end %>
            <% if comp.photo.attached?  %>
              <div type="button" class="pdf_button" data-bs-toggle="modal" data-bs-target="#pdfModal-<%= comp.id %>" >
                <i class="fa-solid fa-file"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
