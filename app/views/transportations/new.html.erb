<h1>Add your ride</h1>

<%= simple_form_for [@trip, @transportation] do |f| %>
  <%= f.input :booking_ref %>
  <%= f.input :departure, html5: true %>
  <%= f.input :return_day, as: :date, html5: true %>

  <%#= f.input :transport_mode, collection: ["flight", "train", "boat", "bike", "car"], as: :radio_buttons %>


  <%= f.input :transport_mode,
            as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'transport_mode-wrapper',
            item_wrapper_class: 'transport_mode-item',
            input_html: {class: 'transport_mode-selector'},
            collection: Transportation::CATEGORIES %>

  <%= f.input :photo, as: :file %>

  <%= f.input :location,
    input_html: {data: {location_autocomplete_target: "location"}, class: 'd-none'},
    wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>

  <%= f.input :notes %>

  <%= f.submit "Save" %>
<% end %>

<%= link_to "Back", trip_path(@trip) %>
